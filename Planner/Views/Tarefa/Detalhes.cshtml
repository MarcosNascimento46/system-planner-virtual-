@model Planner.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<style>
    /* CSS específico para a view de detalhes da tarefa */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 15px;
    }

    dt {
        font-weight: bold;
        color: #555;
        width: 30%;
        padding: 10px;
        background-color: #f0f0f0;
        border: 1px solid #ddd;
        border-radius: 5px 0 0 5px;
    }

    dd {
        margin-left: 0; /* Remove o recuo padrão */
        color: #333;
        width: 70%;
        padding: 10px;
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-left: none;
        border-radius: 0 5px 5px 0;
    }

    .btn {
        margin-top: 20px;
        padding: 10px 15px;
        border-radius: 5px;
        width: auto;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
    }

   
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div>
        <h4>@Model.Titulo</h4>
        <dl class="row">
            <dt>Descrição</dt>
            <dd>@Model.Descricao</dd>

            <dt>Categoria</dt>
            <dd>@Model.CategoriaAtividade</dd>

            <dt>Status</dt>
            <dd>@Model.StatusTarefa</dd>

            <dt>Horário de início</dt>
            <dd>@Model.Inicio.ToString(@"hh\:mm")</dd>

            <dt>Horário de encerramento</dt>
            <dd>@Model.Fim.ToString(@"hh\:mm")</dd>

            <dt>Dia</dt>
            <dd>@Model.Dia.ToShortDateString()</dd>
        </dl>

        <div class="button-container">
            <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-warning">Editar</a>
            <a href="/" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</div>
